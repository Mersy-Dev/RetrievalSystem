{
  "name": "system_frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noemit",
    "test": "echo \"No tests available\" && exit 0",
    "code-lint": "eslint --fix app components i18n && prettier --write app components i18n",
    "review": "npm run type-check && npm run code-lint",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "postinstall": "husky install",
    "check-translations": "ts-node checkTranslations.ts"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "tsc --noemit --skipLibCheck"
    ],
    "**/*.{json,md,css,scss,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-toast": "^1.2.15",
    "@reduxjs/toolkit": "^2.9.0",
    "axios": "^1.11.0",
    "chart.js": "^4.4.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "framer-motion": "^12.16.0",
    "glob": "^11.0.2",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.512.0",
    "next": "15.3.3",
    "next-intl": "^4.1.0",
    "next-themes": "^0.4.6",
    "pdfjs-dist": "^5.4.149",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-pdf": "^10.1.0",
    "react-redux": "^9.2.0",
    "react-toastify": "^11.0.5",
    "swiper": "^11.2.8",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-rtl": "^0.9.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/glob": "^8.1.0",
    "@types/node": "^20",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19",
    "@types/react-redux": "^7.1.34",
    "@types/react-toastify": "^4.0.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "postcss": "^8.5.4",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.8",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5",
    "typescript-eslint": "^8.33.1"
  }
}
